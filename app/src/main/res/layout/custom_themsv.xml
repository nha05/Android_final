<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Sinh Viên"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edttensv"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Tên Sinh Viên"/>

    <EditText
        android:id="@+id/edtmasv"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Mã Số Sinh Viên"/>

    <EditText
        android:id="@+id/edtnganhsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        android:hint="Ngành"/>


    <EditText
        android:id="@+id/edtemailsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtsdtsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Số Điện Thoại"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/cam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/cam"/>

        <ImageButton
            android:id="@+id/folde"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/folde"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="5"
            android:id="@+id/themsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thêm"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="4"
            android:id="@+id/huysv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hủy"/>
    </LinearLayout>

</LinearLayout>